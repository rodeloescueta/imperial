// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH.JS / NEXTAUTH REQUIRED MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// USER MODEL (Extended for Admin)
// ============================================

enum UserRole {
  SUPER_ADMIN // Full system access
  ADMIN       // Can manage users, clients, coverage
  OPERATOR    // View-only + limited edits
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  emailVerified DateTime?
  name          String
  password      String?    // Hashed password for credentials auth
  image         String?
  role          UserRole   @default(OPERATOR)
  status        UserStatus @default(ACTIVE)

  // Audit fields
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdBy   String?   // User ID who created this user
  lastLoginAt DateTime?

  // Relations
  accounts Account[]
  sessions Session[]

  @@index([email])
  @@index([role])
  @@index([status])
}

// ============================================
// CLIENT / SUBSCRIPTION MODELS
// ============================================

enum ClientStatus {
  ACTIVE
  INACTIVE
  LEAD
  ARCHIVED
}

enum SubscriptionStatus {
  ACTIVE
  SUSPENDED
  CANCELLED
  EXPIRED
}

model Plan {
  id        String   @id @default(cuid())
  name      String   // Display name: "Solo", "Bronze", etc.
  tier      String   @unique // Unique identifier: "SOLO", "BRONZE" - for CSV matching
  speed     Int      // Speed in Mbps
  price     Decimal  @db.Decimal(10, 2)
  type      String   @default("RESIDENTIAL") // RESIDENTIAL, SME, CORPORATE
  features  String[] // Array of feature strings
  isActive  Boolean  @default(true)

  // Audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  subscriptions Subscription[]

  @@index([type])
  @@index([isActive])
}

model Client {
  id            String       @id @default(cuid())
  externalId    String?      @unique // Original ID from CSV import

  // Personal info
  firstName     String
  lastName      String
  name          String       // Full name
  email         String?
  phone         String?

  // Address
  address       String?
  city          String?
  zipCode       String?

  // GPS coordinates for coverage map
  latitude      Decimal?     @db.Decimal(10, 7)
  longitude     Decimal?     @db.Decimal(10, 7)

  // Business info (for SME clients)
  companyName   String?

  // Status
  status        ClientStatus @default(ACTIVE)
  isLead        Boolean      @default(false)

  // Billing
  balance       Decimal      @default(0) @db.Decimal(10, 2)

  // Technical
  pppoeUsername String?      @unique

  // Notes
  note          String?      @db.Text

  // Dates
  registeredAt  DateTime?    // Original registration date from CSV
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  createdBy     String?      // Admin user who created

  // Relations
  subscriptions Subscription[]

  @@index([email])
  @@index([phone])
  @@index([status])
  @@index([city])
  @@index([pppoeUsername])
}

model Subscription {
  id              String             @id @default(cuid())
  clientId        String
  planId          String

  // Pricing (can override plan price)
  individualPrice Decimal?           @db.Decimal(10, 2)

  // Service location (can differ from client address)
  latitude        Decimal?           @db.Decimal(10, 7)
  longitude       Decimal?           @db.Decimal(10, 7)

  // Dates
  activeFrom      DateTime?
  activeTo        DateTime?

  // Status
  status          SubscriptionStatus @default(ACTIVE)

  // Audit
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  // Relations
  client          Client             @relation(fields: [clientId], references: [id], onDelete: Cascade)
  plan            Plan               @relation(fields: [planId], references: [id])

  @@index([clientId])
  @@index([planId])
  @@index([status])
}
